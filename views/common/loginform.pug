
mixin login(login)
    .container
        form(method='POST', action='/login', autocomplete='off')
            .col-sm-7
                input.form-control(type='text',placeholder='User',name='user' required class= valid)
            .col-sm-7
                input.form-control(type='password',placeholder='Password',name='pass' required class= valid)
            .col-sm-7
                input.form-control(type='submit', name='submit', value='Submit')
